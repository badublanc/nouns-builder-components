{
	"compilerOptions": {
		"outDir": "./dist",
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"declaration": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"typeRoots": ["node_modules/@types"]
	},
	"include": ["./src/*.ts"]
}
